<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("./head"); %>
    <title>Indexページ</title>
  </head>
  <body>
    <%- include("./header"); %>
    <main>
      <div>
        <% allBlogs.forEach( (blog) => { %>
        <div>
          <a href="blog/<%= blog._id %>">
            <img src="/public/images/<%= blog.image %>" alt="blog-image" />
            <h2><%= blog.title %></h2>
            <p><%= blog.summary %></p>
          </a>
        </div>
        <% }) %>
      </div>
      <div>
        <% if(session !== undefined) { %>
        <a href="/blog/create/">記事を書く</a>
        <% } else { %>
        <a href="/user/login">ログイン</a>
        <% }; %>
      </div>
    </main>
    <%- include("./footer"); %>
  </body>
</html>
