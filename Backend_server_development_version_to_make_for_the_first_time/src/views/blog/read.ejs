<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("../head"); -%>
    <title>記事ページ | <%= singleBlog.title %></title>
  </head>

  <body>
    <div class="Maincontainer">
      <%- include("../header"); -%>

      <aside class="Maincontainer__side"></aside>

      <main class="Maincontainer__body">
        <article class="Article__container">
          <img class="Article__img" src="/public/images/<%= singleBlog.image %>" alt="blog-image" />
          <h1 class="Article__title"><%= singleBlog.title %></h1>
          <p class="Article__body"><%= singleBlog.textBody %></p>

          <% if(locals.userId !== undefined) { %>
          <div class="Article__bottom">
            <a href="/blog/update/<%= singleBlog._id %>" class="Form__button">編集</a>
            <a href="/blog/delete/<%= singleBlog._id %>" class="Form__button danger-color">削除</a>
          </div>
          <% } %>
        </article>
      </main>

      <%- include("../footer"); -%>

      <!-- /.Maincontainer -->
    </div>
  </body>
</html>
