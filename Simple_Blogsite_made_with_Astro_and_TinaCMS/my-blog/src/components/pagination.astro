---
const { prev, next, prevTitle = "前へ", nextTitle = "次へ" } = Astro.props;
---

<div class="flex-spacebetween">
  {
    prev ? (
      <a href={prev} rel="prefetch">
        ← {prevTitle}
      </a>
    ) : (
      <span />
    )
  }
  {
    next ? (
      <a href={next} rel="prefetch">
        {nextTitle} →
      </a>
    ) : (
      <span />
    )
  }
</div>
